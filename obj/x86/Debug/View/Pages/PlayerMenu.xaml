<Page
    x:Class="TotallyFairRace.View.Pages.PlayerMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="SandyBrown">
    <ScrollViewer>
        <ScrollViewer.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="../../Assets/menu.jpeg"/>
        </ScrollViewer.Background>
        <Grid Margin="35,45,20,19" Height="776" RenderTransformOrigin="0.498,0.502">
            <TextBlock Text="Totally fair race" TextWrapping="Wrap" FontSize="36" FontFamily="Stencil" Foreground="#FFC5C5C5" RenderTransformOrigin="0.333,0.643" Height="43" Margin="67,41,60,0" VerticalAlignment="Top" TextAlignment="Center"/>
            <TextBlock x:ConnectionId='2' x:Name="HelloText" HorizontalAlignment="Center" Margin="0,175,0,0" Text="Hello,  " TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="302" FontSize="36" FontFamily="Stencil" FocusVisualPrimaryBrush="White" Foreground="#FFB7A300" RenderTransformOrigin="0.489,-0.157"/>
            <Button x:ConnectionId='3' VerticalAlignment="Bottom" Background="#FFB7A300" Content="LOG OUT" FontFamily="Stencil" FontSize="24" Foreground="White" Margin="0,0,0,60" HorizontalAlignment="Center" Height="80" Width="300"                     ></Button>
            <Grid Margin="0,0,1,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33.3*"></ColumnDefinition>
                    <ColumnDefinition Width="33.3*"></ColumnDefinition>
                    <ColumnDefinition Width="33.3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" HorizontalAlignment="Center" Margin="0,515,0,0" Text="TOP LIST" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="116" FontSize="24" Foreground="#FFB7A300" FontFamily="Stencil" FontWeight="Normal"/>
                <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,515,0,0" Text="Play" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="69" FontSize="24" Foreground="#FFB7A300" FontFamily="Stencil" FontWeight="Normal" RenderTransformOrigin="0.952,0.559"/>
                <TextBlock Grid.Column="2" HorizontalAlignment="Center" Margin="0,515,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="101" FontSize="24" Foreground="#FFB7A300" FontFamily="Stencil" FontWeight="Normal" RenderTransformOrigin="0.825,0.631"><Run Text="Profile"/><LineBreak/><Run/></TextBlock>
                <Image x:ConnectionId='4' Grid.Column="0" HorizontalAlignment="Center" Height="135" Margin="0,325,0,0" VerticalAlignment="Top" Width="134" Source="../../Assets/pehar_white.png"                     />
                <Image x:ConnectionId='5' Grid.Column="1" HorizontalAlignment="Center" Source="../../Assets/next.png"                         RenderTransformOrigin="0.5,0.573" VerticalAlignment="Top" Height="209" Width="210" Margin="0,275,0,0"/>
                <Image x:ConnectionId='6' Grid.Column="2" HorizontalAlignment="Center" Source="../../Assets/gamer.png" Margin="0,290,0,290"                      />
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>

